<Window x:Class="JsonEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JsonEditor"
        mc:Ignorable="d"
        Title="JSON editor" Height="450" Width="800">
    <DockPanel x:Name="Dock" LastChildFill="False">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
            <Button Background="AliceBlue" Content="Open" Margin="5" Padding="2" Click="OpenButtonClick" />
            <Button Background="AliceBlue" Content="Save" Margin="5" Padding="2" Click="SaveButtonClick" />
            <Button Background="AliceBlue" Content="Save as" Margin="5" Padding="2" Click="SaveAsButtonClick" />
        </StackPanel>
        <TreeView x:Name="JsonTree" Margin="0,-0.2,-0.4,0" VerticalAlignment="Top" DockPanel.Dock="Top"
                  Height="{Binding ActualHeight, ElementName=Dock}" />

    </DockPanel>
</Window>